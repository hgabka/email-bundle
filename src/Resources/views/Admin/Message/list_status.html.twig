{% if object.prepared %}
    {{ ' (' ~ ('hg_email.statuses.send_date' | trans({'%date%' : ( object.sendAt is not empty ? (object.sendAt | format_datetime('long', 'short')) : ('hg_email.statuses.immidiately' | trans ))})) ~ ')' }}
