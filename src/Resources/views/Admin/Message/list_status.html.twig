{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}
{% block field %}
{{ ('hg_email.statuses.' ~ value) | trans }}<br />
{% if object.beingSent %}
    {{ 'hg_email.statuses.send_data' | trans({'%recipient%' : object.sentMail, '%success%' : object.sentSuccess, '%fail%' : object.sentFail}) }}
